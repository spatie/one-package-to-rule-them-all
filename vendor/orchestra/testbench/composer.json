{
    "name": "orchestra/testbench",
    "description": "Laravel Testing Helper for Packages Development",
    "homepage": "https://packages.tools/testbench/",
    "keywords": ["laravel", "orchestral", "orchestra-platform", "testing", "tdd", "bdd"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com",
            "homepage": "https://github.com/crynobone"
        }
    ],
    "autoload-dev": {
        "psr-4": {
            "Orchestra\\Testbench\\Tests\\": "core/tests/"
        }
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "laravel/framework": "^8.83.26",
        "mockery/mockery": "^1.4.4",
        "orchestra/testbench-core": "^6.31.1",
        "phpunit/phpunit": "^8.5.21 || ^9.5.10",
        "spatie/laravel-ray": "^1.29.7"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.0-dev"
        }
    },
    "scripts": {
        "prepare": [
            "@composer run post-autoload-dump"
        ],
        "test": [
            "@composer run prepare",
            "@php vendor/bin/phpunit -c ./ --color"
        ],
        "post-autoload-dump": [
            "@php vendor/bin/testbench package:discover --ansi"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
