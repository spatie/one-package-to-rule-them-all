{
    "name": "spatie/laravel-remote",
    "description": "Execute Artisan commands on remote servers",
    "keywords": [
        "spatie",
        "laravel-remote"
    ],
    "homepage": "https://github.com/spatie/laravel-remote",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0|^9.0|^10.0",
        "spatie/laravel-package-tools": "^1.9",
        "spatie/ssh": "^1.5"
    },
    "require-dev": {
        "orchestra/testbench": "^6.23|^7.0|^8.0",
        "pestphp/pest-plugin-laravel": "^1.3",
        "phpunit/phpunit": "^9.4",
        "spatie/laravel-ray": "^1.9",
        "spatie/pest-plugin-snapshots": "^1.1",
        "spatie/phpunit-snapshot-assertions": "^4.2",
        "spatie/ray": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Remote\\": "src",
            "Spatie\\Remote\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Remote\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest --colors=always",
        "test-coverage": "vendor/bin/pest --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Remote\\RemoteServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}