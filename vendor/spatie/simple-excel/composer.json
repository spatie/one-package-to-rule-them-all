{
    "name": "spatie/simple-excel",
    "description": "Read and write simple Excel and CSV files",
    "keywords": [
        "spatie",
        "simple-excel"
    ],
    "homepage": "https://github.com/spatie/simple-excel",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "box/spout": "^3.0",
        "illuminate/support": "^8.71|^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "spatie/phpunit-snapshot-assertions": "^4.0",
        "spatie/temporary-directory": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\SimpleExcel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\SimpleExcel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
